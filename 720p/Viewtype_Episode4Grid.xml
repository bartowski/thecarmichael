			<visible>Container.Content(episodes)</visible>
			<itemlayout width="634" height="150">
				<control type="group">
					<posx>20</posx>
					<posy>6</posy>
					<control type="image">
						<posx>-20</posx>
						<posy>-6</posy>
						<width>285</width>
						<height>153</height>
						<texture>episode4grid/episode_shadow.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture>misc/back.png</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="textbox">
						<posx>256</posx>
						<posy>-8</posy>
						<width>356</width>
						<height>44</height>
						<align>left</align>
						<font>DejaVuSans_Bold_Caps_18</font>
						<textcolor>Dark_Green</textcolor>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="textbox"><!-- Plot and TV -->
						<posx>256</posx>
						<posy>32</posy>
						<width>356</width>
						<height>94</height>
						<align>justify</align>
						<info>ListItem.Plot</info>
						<font>Liberation16</font>
						<textcolor>Black</textcolor>
						<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					</control>
					<control type="image">
						<posx>210</posx>
						<posy>100</posy>
						<width>44</width>
						<height>40</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<visible>Skin.HasSetting(tvoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					</control>
				</control>
			</itemlayout>

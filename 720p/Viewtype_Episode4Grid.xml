<!--Alaska-->

<includes>
	
	
	<include name="Viewtype_Episode4Grid">
	
		<control type="panel" id="54">
			<posx>0</posx>
			<posy>420</posy>
			<width>1280</width>
			<height>400</height>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<focusposition>1</focusposition>
			<orientation>horizontal</orientation>
			<viewtype label="4rows">list</viewtype>
			<onleft>54</onleft>
			<onright>54</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<include>main_window_open_close</include>
			<animation effect="slide" start="0,0" end="0,40" time="400" delay="200" condition="ControlGroup(9000).HasFocus">Conditional</animation>
			<visible>Container.Content(episodes)</visible>
			<itemlayout width="634" height="150">
				<control type="group">
					<posx>20</posx>
					<posy>6</posy>
					<control type="image">
						<posx>-20</posx>
						<posy>-6</posy>
						<width>285</width>
						<height>153</height>
						<texture>episode4grid/episode_shadow.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture>misc/back.png</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="label">
						<posx>252</posx>
						<posy>-6</posy>
						<width>374</width>
						<height>20</height>
						<align>left</align>
						<font>DejaVuSans_Bold_Caps_20</font>
						<textcolor>Dark_Green</textcolor>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="textbox"><!-- Plot and TV -->
						<posx>252</posx>
						<posy>32</posy>
						<width>360</width>
						<height>94</height>
						<align>justify</align>
						<info>ListItem.Plot</info>
						<font>Liberation16</font>
						<textcolor>Black</textcolor>
						<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="634" height="150">
				<control type="group">
					<posx>20</posx>
					<posy>6</posy>
					<control type="image">
						<posx>-20</posx>
						<posy>-6</posy>
						<width>285</width>
						<height>153</height>
						<texture>episode4grid/episode_shadow.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>-6</posx>
						<posy>-6</posy>
						<width>627</width>
						<height>152</height>
						<texture>episode4grid/focus_selection.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture>misc/back.png</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>140</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="label">
						<posx>252</posx>
						<posy>-6</posy>
						<width>374</width>
						<height>20</height>
						<align>left</align>
						<font>DejaVuSans_Bold_Caps_20</font>
						<textcolor>Dark_Green</textcolor>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="textbox"><!-- Plot and TV -->
						<posx>252</posx>
						<posy>32</posy>
						<width>360</width>
						<height>94</height>
						<align>justify</align>
						<info>ListItem.Plot</info>
						<font>Liberation16</font>
						<textcolor>Black</textcolor>
						<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					</control>
				</control>
			</focusedlayout>
		</control>
	
	
		
		

	</include>
</includes>

<!--Alaska-->

<includes>
	
	
	<include name="Viewtype_Pictures">
	
		<control type="wraplist" id="51">
			<posx>-80</posx>
			<posy>440</posy>
			<width>1380</width>
			<height>400</height>
			<onleft>450</onleft>
			<onright>450</onright>
			<onup>9000</onup>
			<ondown>60</ondown>
			<focusposition>3</focusposition>
			<viewtype label="$LOCALIZE[1213]">list</viewtype>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<include>main_window_open_close</include>
			<itemlayout width="160" height="230">
				<control type="group">
					<posx>20</posx>
					<posy>110</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>140</width>
						<height>140</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="10">ThumbShadow.png</bordertexture>
						<bordersize>8</bordersize>
						<fadetime>300</fadetime>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="490" height="280">
				<control type="group">
				<posx>20</posx>
				<posy>30</posy>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="60" end="100" time="500" tween="back" easing="out" />
				</animation>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>451</width>
						<height>220</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="5">folder-focus.png</bordertexture>
						<bordersize>5</bordersize>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<animation effect="slide" start="0,0" end="-200,0" time="500" delay="100" condition="Control.HasFocus(8241)">Conditional</animation>
					</control>
				</control>
			</focusedlayout>
		</control>
	
	
	
		

	</include>
</includes>

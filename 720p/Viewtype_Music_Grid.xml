<!--Alaska-->

<includes>
	
	
	<include name="Viewtype_Music_Grid">
	
		<control type="panel" id="53">
			<posx>-26</posx>
			<posy>416</posy>
			<width>1380</width>
			<height>298</height>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<focusposition>3</focusposition>
			<orientation>vertical</orientation>
			<viewtype label="Grid">List</viewtype>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>53</onup>
			<ondown>53</ondown>
			<preloaditems>2</preloaditems>
			<include>main_window_open_close</include>
			<animation effect="slide" start="0,0" end="0,40" time="400" delay="200" condition="ControlGroup(9000).HasFocus">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="Window.IsActive(musicinformation)">Conditional</animation>
			<visible>Container.Content(artists) | Container.Content(albums) | !Container.Content(genres)</visible>
			<itemlayout width="142" height="148">
				<control type="group">
					<posx>30</posx>
					<posy>10</posy>
						<control type="image">
							<posx>-8</posx>
							<posy>-4</posy>
							<width>154</width>
							<height>158</height>
							<texture>music/music_grid_shadow.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>136</width>
							<height>136</height>
							<texture>misc/back.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>136</width>
							<height>136</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>300</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
				</control>
			</itemlayout>
			<focusedlayout width="142" height="148">
				<control type="group">
				<posx>30</posx>
				<posy>10</posy>
				<animation type="Focus" reversible="false">
					<effect type="zoom" center="auto" start="60" end="114" time="500" tween="back" easing="out" />
				</animation>
					<control type="image">
						<posx>-8</posx>
						<posy>-4</posy>
						<width>154</width>
						<height>158</height>
						<texture>music/music_grid_shadow.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>136</width>
						<height>136</height>
						<texture>misc/back.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>136</width>
						<height>136</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<bordertexture border="2">folder-focus.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
				</control>
			</focusedlayout>
		</control>
	
	
	<control type="group">
		<posx>250</posx>
		<posy>430</posy>
		<animation effect="slide" start="-800,0" end="0,0" time="400">Visible</animation>
		<visible>Control.IsVisible(53) + Window.IsActive(musicinformation)</visible>
			<control type="image">
				<posx>-14</posx>
				<posy>-8</posy>
				<width>210</width>
				<height>285</height>
				<texture>poster/poster_focus_shadow.png</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>181</width>
				<height>273</height>
				<texture background="true">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>
	</control>

	</include>
</includes>
